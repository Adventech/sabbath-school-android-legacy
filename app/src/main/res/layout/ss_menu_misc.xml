<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/ss_menu_misc_padding_left"
    android:paddingStart="@dimen/ss_menu_misc_padding_left"
    android:paddingTop="@dimen/ss_menu_misc_padding_top"
    android:paddingBottom="@dimen/ss_menu_misc_padding_bottom"
    android:paddingRight="@dimen/ss_menu_misc_padding_right"
    android:paddingEnd="@dimen/ss_menu_misc_padding_right"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/ss_menu_misc_icon"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textAllCaps="true"
        android:textSize="@dimen/ss_menu_misc_icon_size" />

    <TextView
        android:id="@+id/ss_menu_misc_title"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ss_menu_misc_title_margin_left"
        android:layout_marginStart="@dimen/ss_menu_misc_title_margin_left"
        android:layout_width="match_parent"
        android:textAllCaps="true"
        android:textSize="@dimen/ss_menu_misc_title_text_size"
        android:layout_toRightOf="@id/ss_menu_misc_icon"
        android:layout_toEndOf="@id/ss_menu_misc_icon" />

</RelativeLayout>