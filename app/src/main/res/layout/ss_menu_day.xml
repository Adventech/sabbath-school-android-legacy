<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/ss_menu_day_padding">

    <ImageView
        android:id="@+id/ss_menu_day_date_shape"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/ss_menu_day_date_shape" />

    <TextView
        android:id="@+id/ss_menu_day_date_number"
        android:gravity="center"
        android:layout_alignTop="@id/ss_menu_day_date_shape"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ss_menu_day_date_number_margin_top"
        android:layout_width="@dimen/ss_menu_day_date_shape_size"
        android:textColor="@color/ss_menu_day_date_number"
        android:textSize="@dimen/ss_menu_day_date_number_font_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ss_menu_day_date_month"
        android:gravity="center"
        android:layout_below="@id/ss_menu_day_date_number"
        android:layout_height="wrap_content"
        android:layout_width="@dimen/ss_menu_day_date_shape_size"
        android:textAllCaps="true"
        android:textColor="@color/ss_menu_day_date_month"
        android:textSize="@dimen/ss_menu_day_date_month_font_size" />

    <TextView
        android:id="@+id/ss_menu_day_date"
        android:layout_alignTop="@+id/ss_menu_day_date_number"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ss_menu_day_date_margin_left"
        android:layout_marginStart="@dimen/ss_menu_day_date_margin_left"
        android:layout_toRightOf="@+id/ss_menu_day_date_shape"
        android:layout_toEndOf="@+id/ss_menu_day_date_shape"
        android:layout_width="wrap_content"
        android:textSize="@dimen/ss_menu_day_date_font_size" />

    <TextView
        android:id="@+id/ss_menu_day_name"
        android:layout_alignTop="@+id/ss_menu_day_date_month"
        android:layout_alignLeft="@+id/ss_menu_day_date"
        android:layout_alignStart="@+id/ss_menu_day_date"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textAllCaps="true"
        android:textSize="@dimen/ss_menu_day_name_font_size"
        android:textStyle="bold" />
</RelativeLayout>